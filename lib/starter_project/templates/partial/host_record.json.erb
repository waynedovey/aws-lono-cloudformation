    "HostRecord": {
      "Properties": {
        "Comment": "DNS name for <%= @domain %>",
        "HostedZoneName": ".mydomain.net.",
        "Name": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "AWS::StackName"
              },
              ".<%= @domain %>"
            ]
          ]
        },
        "ResourceRecords": [
          {
            "Fn::GetAtt": [
              "elb",
              "DNSName"
            ]
          }
        ],
        "TTL": "60",
        "Type": "CNAME"
      },
      "Type": "AWS::Route53::RecordSet"
    },
